version: "3.3"
services:
  dind:
    restart: always
    privileged: true
    image: docker:dind
    command: ['--storage-driver=overlay2']
    volumes: ['/var/lib/docker']
  runner:
    restart: always
    image: gitlab/gitlab-runner:alpine
    volumes: ['./glrunner-build:/etc/gitlab-runner:Z']
    environment: ['DOCKER_HOST=tcp://dind:2375']
  register-runner:
    restart: "no"
    image: gitlab/gitlab-runner:alpine
    volumes: ['./glrunner-build:/etc/gitlab-runner:Z']
    command:
      - register
      - --non-interactive
      - --locked=false
      - --name=build
      - --executor=docker
      - --docker-image=docker:dind
      - --docker-volumes=/var/run/docker.sock:/var/run/docker.sock
    environment:
      - CI_SERVER_URL=https://git.domain.pro/
      - REGISTRATION_TOKEN={{ gitlab_registration_token }}
